DECLARE @NewCreditLimit DECIMAL(18, 2);
SET @NewCreditLimit = 7000; -- Set the new credit limit value

-- Update the credit limit for a specific customer
UPDATE Sales.NewCustomers
SET CreditLimit = @NewCreditLimit
WHERE CustomerID = 1;

